@model List<Proyecto_PAC325.Models.ComercioModel>
<section class="bienvenida">
    <div>
        <p>Apartado de Comercio</p>
        <h1>
            ESTE ES EL APARTADO DE COMERCIO DONDE PODRAS VISUALIZAR LOS COMERCIOS
        </h1>
        <p>Los comercios que se encuentren en este apartado son aquellos afiliados a la plataforma de sinpe</p>
        <button class="boton">
            Ver comercios
        </button>
    </div>
</section>

<div class="titulo-container">
    <h2>
        COMERCIOS AFILIADOS
    </h2>
</div>

<div class="act-container">
    <h3>Acciones: </h3>
    <a class="activo" asp-action="Index">Lista</a>
    <a asp-action="Registro">Registrar</a>
</div>

<section class="vista-tabla">
    <section class="tabla-container">
        <table class="tabla">
            <thead>
                <tr>
                    <th>Identificación</th>
                    <th>Tipo de Identificación</th>
                    <th>Nombre</th>
                    <th>Tipo de Comercio</th>
                    <th>Teléfono</th>
                    <th>Correo</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(ComercioModel comercio in Model)
                {
                    <tr>
                        <td>@comercio.Identificacion</td>
                        @if (comercio.TipoIdentificacion == 1)
                        {
                            <td>Física</td>
                        }
                        else
                        {
                            <td>Jurídica</td>
                        }
                        <td>@comercio.Nombre</td>
                        @switch (comercio.TipoDeComercio)
                        {
                            case 1:
                                <td>Restaurante</td>
                            break;
                            case 2:
                                <td>Supermercado</td>
                            break;
                            case 3:
                                <td>Ferretería</td>
                            break;
                            case 4:
                                <td>Otro</td>
                            break;
                        }
                        <td>@comercio.Telefono</td>
                        <td>@comercio.CorreoElectronico</td>
                        @if (comercio.Estado == 1)
                        {
                            <td>Activo</td>
                        }
                        else
                        {
                            <td>Inactivo</td>
                        }
                        <td>
                            <a class="boton">Editar</a>
                            <a class="boton">Eliminar</a>    
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

</section>
