<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proyecto_PAC325</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Proyecto_PAC325.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;700&display=swap" rel="stylesheet">

</head>
<body>
    <header class="nav-container">
        <nav class="navbar">
            <a asp-controller="Home" asp-action="Index">
                <img src="/img/logo_PAC3.png">
            </a>
            @if (User.IsInRole("Administrador")) 
            {
                <div class="dropdown">
                    <a asp-controller="Comercio" asp-action="Index" class="dropdown-btn">Comercios ▾</a>
                    <div class="dropdown-menu">
                        <a asp-controller="ConfigComercio" asp-action="Index">➤ Configuraciones</a>
                    </div>
                </div>
                <a asp-controller="Sinpe" asp-action="Index">Sinpe Móvil</a>
                <a asp-controller="Bitacora" asp-action="Index">Bitacora</a>
                <a asp-controller="Reporte" asp-action="Index">Reportes</a>
                <a asp-controller="Usuario" asp-action="Index">Usuario</a>
            }
            <a asp-controller="Caja" asp-action="Index">Cajas</a>
            <div class="logout-container">
                <a asp-controller="Auth" asp-action="Index">Cerrar Sesión</a>
            </div>
            <a asp-controller="Sinpe" asp-action="Index">Sinpe Móvil</a>
            <a asp-controller="Bitacora" asp-action="Index">Bitacora</a>
            <a asp-controller="Reporte" asp-action="Index">Reportes</a>
            <a asp-controller="Usuario" asp-action="Index">Usuario</a>


            <div class="dropdown accessibility-dropdown" style="margin-left: auto;">
                <a class="dropdown-btn" role="button" aria-haspopup="true" aria-expanded="false">Accesibilidad ▾</a>
                <div class="dropdown-menu" role="menu" aria-label="Herramientas de accesibilidad">
                    <button id="acc-contrast" class="acc-btn" type="button" role="menuitem" aria-pressed="false">Alto contraste</button>
                    <button id="acc-increase" class="acc-btn" type="button" role="menuitem">A+</button>
                    <button id="acc-decrease" class="acc-btn" type="button" role="menuitem">A−</button>
                    <button id="acc-reset" class="acc-btn secondary" type="button" role="menuitem">Reset</button>
                </div>
            </div>


        </nav>
    </header>

    <main role="main" class="pb-3">
            @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Proyecto_PAC325 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
