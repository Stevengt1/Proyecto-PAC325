@model Proyecto_PAC325.Models.ComercioModel
<section class="bienvenida">
    <div>
        <p>Apartado de Comercio</p>
        <h1>
            ESTE ES EL APARTADO DE COMERCIO DONDE PODRAS VER EL DETALLE DEL COMERCIO SELECCIONADO
        </h1>
        <p>Este sector esta designado para que puedas ver el detalle de los comercios afiliados a la plataforma</p>
        <button class="boton bg-oscuro">
            Ver Detalle
        </button>
    </div>
</section>

<div class="titulo-container">
    <h2>
        DETALLE
    </h2>
</div>

<div class="act-container">
    <h3>Acciones: </h3>
    <a asp-action="Index">Lista</a>
    <a asp-action="Registro">Registrar</a>
</div>

<section class="registro-container">
    <div class="formulario">
        <label>Identificación</label>
        <input type="text" class="entrada-datos" readonly asp-for="Identificacion"/>
        <label>Tipo de Identificación</label>
        @switch (Model.TipoIdentificacion)
        {
            case 1:
                <input type="text" class="entrada-datos" readonly value="Fisica" />
                break;
            case 2:
                <input type="text" class="entrada-datos" readonly value="Juridica" />
                break;
        }
        <label>Nombre de Comercio</label>
        <input type="text" class="entrada-datos" readonly asp-for="Nombre" />
        <label>Tipo de Comercio</label>
        @switch (Model.TipoDeComercio)
        {
            case 1:
                <input type="text" class="entrada-datos" readonly value="Restaurante" />
                break;
            case 2:
                <input type="text" class="entrada-datos" readonly value="Supermercado" />
                break;
            case 3:
                <input type="text" class="entrada-datos" readonly value="Ferreteria" />
                break;
            case 4:
                <input type="text" class="entrada-datos" readonly value="Otros" />
                break;
        }
        <label>Teléfono</label>
        <input type="number" class="entrada-datos" readonly asp-for="Telefono" />
        <label>Correo Electrónico</label>
        <input type="email" class="entrada-datos" readonly asp-for="CorreoElectronico" />
        <label>Dirección Completa</label>
        <input type="text" class="entrada-datos" readonly asp-for="Direccion" />
        <label>Fecha de Registro</label>
        <input type="date" class="entrada-datos" readonly asp-for="FechaDeRegistro" />
        <label>Fecha de Modificación</label>
        <input type="date" class="entrada-datos" readonly asp-for="FechaDeModificacion" />
        <label>Estado</label>
        @switch (Model.Estado)
        {
            case 0:
                <input type="text" class="entrada-datos" readonly value="Inactivo" />
                break;
            case 1:
                <input type="text" class="entrada-datos" readonly value="Activo" />
                break;
        }
    </div>
</section>

